@{
    ViewData["Title"] = "Home";
    var student = User.ToAthenaUser();
}

@if (!User.Identity.IsAuthenticated)
{
    <div class="notLoggedIn" style="padding-top:5rem">
        <h1>
            Welcome to the Athena Scheduling Assistant!
        </h1>
        <p class="flow-text" style="padding-bottom:5rem">
            This tool was designed by students for students, to create a more streamlined approach to the scheduling process for both students and universities.
        </p>
        <div class="row center">
            <div class="col s4">
                <i class="large material-icons blue-text text-accent-3">verified_user</i>

                <h4>Security</h4>
                <p>Create an account using your existing Google or Microsoft login provided by your university. We don't even store your password!</p>
            </div>
            <div class="col s4">
                <i class="large material-icons blue-text text-accent-3">event_available</i>
                <h4>Scheduling & Things</h4>
                <p>Athena helps schedule the classes you need and manage the institutions and programs you're enrolled in.</p>
            </div>
            <div class="col s4">
                <i class="large material-icons blue-text text-accent-3">mood</i>
                <h4>Simplicity</h4>
                <p>Enjoy Athena's inuitive functionality and stress-free user experience. We offer a solution to the many, MANY, overly complicated and numerous scheduling systems that universities already use.</p>
            </div>
        </div>
    </div>
}
else
{
    @Html.Partial("_StudentDetails")

}

@section scripts {
    @if (User.Identity.IsAuthenticated)
    {
        <script type="text/javascript" src="@Url.Content("~/schedule.js")"></script>
        <script type="text/javascript">
            $(function () {
                athena.schedule.init('@(student.Id)', true);
            });

            $('.printBtn').on('click', function () {
                window.print();
            });
        </script>
    }
}