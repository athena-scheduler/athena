
@{
    ViewData["Title"] = "Manage Completed Courses";
    var student = User.ToAthenaUser().Student;
}

<h2>Manage Completed Courses</h2>
<p class="flow-text">
    To assist the schuleder, you can mark courses that you already took.
</p>
<div class="row">
    <div class="col s12">
        <div class="card grey darken-3 white-text">
            <div class="card-content">
                <div class="row">
                    <div class="input-field col s11">
                        <i class="material-icons prefix">search</i>
                        <input type="text" class="flow-text" id="completed-search" />
                        <label for="completed-search">Search</label>
                    </div>
                    <div class="input-field col s1 center">
                        <a class="modal-trigger color-inherit" href="#add-completed-courses-dialog"><i class="material-icons small">playlist_add</i></a> 
                    </div>
                </div>
                <div class="row" id="completed-courses">
                    <div class="col s12">
                        <div class="progress"><div class="indeterminate"></div></div>
                    </div>        
                </div>
                <div class="row">
                    <div class=" col s12">
                        <ul class="pagination pagination-dark center">
                            <li class="disabled"><a href="#!"><i class="material-icons">chevron_left</i></a></li>
                            <li class="active"><a href="#!">1</a></li>
                            <li class="waves-effect"><a href="#!">2</a></li>
                            <li class="waves-effect"><a href="#!">3</a></li>
                            <li class="waves-effect"><a href="#!">4</a></li>
                            <li class="waves-effect"><a href="#!">5</a></li>
                            <li class="waves-effect"><a href="#!"><i class="material-icons">chevron_right</i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="add-completed-courses-dialog" class="modal modal-fixed-footer">
    <div class="modal-content">
        <h4>What courses did you take ?</h4>
        <div class="row">
            <div class="input-field col s12">
                <i class="material-icons prefix">search</i>
                <input type="text" class="flow-text" id="incomplete-search" />
                <label for="incomplete-search">Search</label>
            </div>
        </div>
        <div class="input-field col s1 center">
            <a class="modal-trigger color-inherit" href="#add-incomplete-courses-dialog"><i class="material-icons small">playlist_add</i></a>
        </div>
        <div class="row" id="incomplete-courses">
            <div class="col s12">
                <div class="progress"><div class="indeterminate"></div></div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <ul class="pagination center pagination-slim">
            <li class="disabled"><a href="#!"><i class="material-icons">chevron_left</i></a></li>
            <li class="active"><a href="#!">1</a></li>
            <li class="waves-effect"><a href="#!">2</a></li>
            <li class="waves-effect"><a href="#!">3</a></li>
            <li class="waves-effect"><a href="#!">4</a></li>
            <li class="waves-effect"><a href="#!">5</a></li>
            <li class="waves-effect"><a href="#!"><i class="material-icons">chevron_right</i></a></li>
        </ul>
    </div>
</div>

<div class="row">
    <div class="col s2 offset-s10">
        <form asp-action="@nameof(StudentController.UserSetupComplete)" asp-route-returnUrl="@Model" method="post">
            <button class="btn btn-block right" type="submit">Finish</button>
        </form>
    </div>
</div>

@section scripts
{
    <script type="text/javascript" src="@Url.Content("~/completedCourses.js")"></script>
    <script type="text/javascript">
        athena.completedCourses.init("@(student.Id)");
    </script>


}

